<%- include('partials/header') %>
<section class="form-section">
  <h1>Forgot Password</h1>
  <p style="text-align: center; color: var(--text-secondary); margin-bottom: var(--space-lg);">
    Enter your email address and we'll send you a reset link.
  </p>
  
  <% if (typeof message !== 'undefined' && message) { %>
    <div class="<%= messageType === 'error' ? 'error-message' : 'success-message' %>">
      <%= message %>
    </div>
  <% } %>
  
  <form action="/forgot-password" method="POST" class="form-card">
    <input type="email" name="email" placeholder="Enter your email" required>
    <button type="submit" class="btn full">Send Reset Link</button>
    <p>Remember your password? <a href="/login">Back to Login</a></p>
  </form>
</section>
<%- include('partials/footer') %>
